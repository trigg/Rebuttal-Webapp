{
  "compilerOptions": {
    "rootDir": "src",
    "allowJs": true,
    "checkJs": false,
    "target": "es2015",
    "module": "es2015",
    "lib": ["es2015", "dom", "dom.iterable", "ES2021.String"],
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
